<h1>Listing tribes</h1>

<table>
  <tr>
    <th>Tribe name</th>
    <th>Category</th>
    <th>Members</th>
    <th>Offers</th>
    <th>Amount saved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tribes.each do |tribe| %>
  <tr>
    <td><%= tribe.tribe_name %></td>
    <td><%= tribe.category %></td>
    <td><%= tribe.tribe_members %></td>
    <td><%= tribe.offers %></td>
    <td><%= tribe.amount_saved %></td>
    <td><%= link_to 'Show', tribe %></td>
    <td><%= link_to 'Edit', edit_tribe_path(tribe) %></td>
    <td><%= link_to 'Destroy', tribe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

