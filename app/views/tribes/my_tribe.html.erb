<p class="my_tribe">My Tribes</p>
<% @tribes.each do |tribe| %>
  <br />
  <div class="my_tribe_page">
    <table>
      <tr>
        <td class="my_tribe_name_dimension">
         <div class="my_tribe_name"><%= tribe.tribe_name %></div>
           <div class="my_tribe_f">
            
            <div class="addthis_toolbox addthis_default_style ">
            <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
            <a class="addthis_button_tweet"></a>
            </div>
            <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=xa-501b5fca68dbce58"></script>
        </td>
           
        <td>
            <%=  link_to "Go to this tribe", tribe_products_tribes_path(:id => tribe), :class => 'global_button', :id => 'go_to_this_tribe' %>

        </td>
        <td>
          <% tribe.members.each do |each_member| %>
            <% if  each_member['uid'] == current_user.uid && each_member['status'] == 'thinking' %>                              
                <%= link_to "Accept invitation", change_invitation_status_tribes_path(:id => tribe.id, :uid => each_member['uid']), :class => 'global_button' %>
            <% elsif each_member['uid'] == current_user.uid && each_member['status'] == 'accepted' %>                              
                <%= submit_tag 'Invite friends', :class => 'global_button', :id =>'invite_friend' %>                
            <% end %>
          <% end %>
        </td>
        <td>
          <section id="tribe_create">
            <table class="tribe_dimension">
              <td>
                <%= link_to (image_tag(FbGraph::User.new(tribe.created_by).fetch.picture, :class => 'created_user_image' )) %>
              </td>
              <td>          
                <div class="tribe_created_text">Tribe created by</div>
                <div class="tribe_created_user_name"> <%= FbGraph::User.new(tribe.created_by).fetch.name %></div>       
              </td>
            </table>
          </section>
        </td>        
      </tr>
    </table>
  </div>
<% end %>


<div class="my_tribe_last"> 
  <p class="my_tribe_last_line">Can't see what you want? Click to <%= link_to "Create a tribe", new_tribe_path %></p>
</div>

