<h1>My Tribes</h1>


 <% @tribes.each do |tribe| %>
<br />
<div class="my_tribe_page">
<table>
  <tr>
  <td>
   <div class="my_tribe_name"><%= tribe.tribe_name %></div>
       <div class="my_tribe_f">
         <div class="addthis_toolbox addthis_default_style" >
             <a class="addthis_button_facebook_like" fb:like:layout="button_count" ></a>
              <a class="addthis_button_tweet" ></a>
             </div>
             </div>
	<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=xa-50180dbc26e20234"></script>
   </div>
     </td> 
    <td>
    <% tribe.members.each do |each_member| %>    
      <% if  each_member['uid'] == current_user.uid && each_member['status'] == 'thinking' %>
        <td>
          <%= link_to "Accept the invitation", change_invitation_status_tribes_path(:id => tribe.id, :uid => each_member['uid']) %>
        </td>
      <% end %>  
      <% if each_member['uid'] == current_user.uid && each_member['status'] == 'accepted' %>  
        <div class="go_to_this_icon">
          <td><%=  link_to (image_tag("/assets/go_to_this_tribe_icon.png")), tribe_products_tribes_path(:id => tribe) %></td>        
         </div>
         <% end %>
    <% end %>    
	</td>
<td>

<%= image_submit_tag("/assets/invite_friends_icon.png", :class =>'invite_friend_icon' ) %>  

</td>
<td>
  <section id="tribe_create">
          <table>
            <td>
              <%= link_to (image_tag(FbGraph::User.new(tribe.created_by).fetch.picture, :class => 'created_user_image' )) %>
            </td>
            <td>          
              <div class="tribe_created_text">Tribe created by:</div>
              <div class="tribe_created_user_name"> <%= FbGraph::User.new(tribe.created_by).fetch.name %></div>       
           </td>
         </table>
        </section>
</td>
  </tr>
</table>
</div>
<% end %>
<div class="my_tribe_bottom"> 
<p>Can't see what you want? Click to <%= link_to "Create a tribe" %></p>
</div>