<div class="group_text_header">
    <div class="group_location_text">Showing group near <%= params[:zipcode]  %> ,South Australia</div>
    <div class="group_offer_post_code_text">Postcode</div>
    <div class="group_offer_post_code_input_box">
      <input type="text" />
    </div>
    <div class="group_post_search"><input type="button" value="search"/></div>
</div><br /> <br/>
 <%  @zipcode.product_groups.each do |each_product_group| %>
  <% if each_product_group.zipcode == params[:zipcode]  %>

  <div class="group_details_container">
      <div class="location_of_group"><%= image_tag "http://maps.google.com/maps/api/staticmap?center=37.386052,-122.083851&zoom=13&markers=37.386052,-122.083851&size=572x470&sensor=false" %> </div>
      <div class="location_of_country">
        <a href="#" class="link_for_location_of_country">Solar power systems</a> in Adelaide,South Australia
      </div>
      <div class="description_for_tribe">If you're in this area,you can join this solar buying group to receive group discount offers on home solar systems for:</div>

        <div class="member_count_box"><br />
          <span class="number_dimension"><center>1</center></span>
          <span class="member_font"><center>people</center></span>
        </div>
      <div class="offer_details"><br />
        <span class="offer_count"><center>0</center></span>
        <span class="offer_text"><center>offers</center></span>
      </div>
      <div class="time_left_details"><br />
        <span class="time_left"><center>12</center></span>
        <span class="time_left_text"><center>days left</center></span>
      </div>
      <div class="view_this_group"><input type="button" value="View group" /></div>
    
  </div>
  <%  break; %>
  <%  else %>
  <div class="new_group_text">You're the first in this area to participate in an offersolar community buying program! </div>
  <div class="new_group_details_container">
      

      <div class="new_location_of_group"><%= image_tag "http://maps.google.com/maps/api/staticmap?center=37.386052,-122.083851&zoom=13&markers=37.386052,-122.083851&size=572x470&sensor=false" %> </div>
      <div class="new_location_of_country">
        Join a new group for Adelaide,<%= params[:zipcode] %> South Australia
      </div>
      <div class="new_description_for_tribe">If this is your area,click 'Get Started' with your local solar buying group.We'll help the group grow  and attract great group discount.</div>

        <div class="new_group_box"><br />
          <span class="group_font"><center>new group</center></span>
        </div>
      <div class="new_offer_details"><br />
        <span class="new_offer_count"><center>0</center></span>
        <span class="new_offer_text"><center>offers</center></span>
      </div>
      <div class="time_left_details"><br />
        <span class="time_left"><center>12</center></span>
        <span class="time_left_text"><center>days left</center></span>
      </div>
      <div class="get_started_btn"><input type="button" value="Get started!" /></div>
    
   </div>
  <%break;%>
   <% end %>
   <%end%>